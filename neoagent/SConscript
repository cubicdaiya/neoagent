# -*- coding: utf-8 -*-

import build.util
from build.neoagent import config

env = Environment(
    CFLAGS=config.cflags,
    CPPPATH=config.includes,
)

libs         = config.libs
use_tcmalloc = ARGUMENTS.get('tcmalloc', 'n');

if use_tcmalloc == 'y' or use_tcmalloc == 'yes':
    libs.append('tcmalloc')

prog = env.Program(
    'neoagent',
    [ Glob('*.c'), Glob('ext/*.c') ],
    LIBS=libs,
)

if 'configure' in COMMAND_LINE_TARGETS:
    if build.util.configure(Configure(env),
                            libs,
                            config.headers,
                            config.funcs) is False:
        Exit(1)
    else:
        Exit(0)
elif 'install' in COMMAND_LINE_TARGETS:
    prefix  = ARGUMENTS.get('prefix', '/usr/local/')
    doc_dir = '../doc'
    build.util.install(env, prog, prefix, doc_dir)
